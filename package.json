{
  "name": "pgats-books-api",
  "version": "1.0.0",
  "description": "API REST + GraphQL para catálogo de livros com autenticação JWT.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
  "test": "start-server-and-test start http://localhost:4010/docs 'mocha \"test/**/*.test.js\" --reporter mocha-allure-reporter'",
    "test:controller": "mocha 'test/controller/**/*.test.js'",
    "test:rest": "mocha 'test/rest/**/*.test.js'",
    "test:graphql": "mocha 'test/graphql/**/*.test.js'",
  "test:external": "start-server-and-test start http://localhost:4010/docs 'mocha \"test/rest/external/**/*.test.js\" \"test/graphql/external/**/*.test.js\"'",
  "test:all": "start-server-and-test start http://localhost:4010/docs 'mocha \"test/**/*.test.js\"'",
    "coverage": "nyc --reporter=lcov --reporter=text-summary npm run test",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report"
  },
  "author": "RenataCPF",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^3.12.0",
    "bcryptjs": "^2.4.3",
    "chai": "^4.3.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-jsdoc": "^6.2.8",
  "swagger-ui-express": "4.6.3"
  },
  "devDependencies": {
    "start-server-and-test": "^2.0.0",
    "mocha": "^10.2.0",
    "supertest": "^6.3.3",
    "sinon": "^17.0.1",
    "nyc": "^15.1.0",
    "mocha-allure-reporter": "^1.4.0",
    "nodemon": "^3.0.1",
    "allure-commandline": "^2.24.0"
  }
}
